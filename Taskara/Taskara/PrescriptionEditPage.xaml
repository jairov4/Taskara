<taskara:Page x:Class="Taskara.PrescriptionEditPage"
			  xmlns:taskara="clr-namespace:Taskara"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	  
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="800"
	  Title="Receta">

	<DockPanel>
		<TextBlock DockPanel.Dock="Top" Style="{StaticResource TitleStyle}">Receta</TextBlock>
		<Grid Margin="20">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="172*"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="197*"/>
				<ColumnDefinition Width="203*"/>
			</Grid.ColumnDefinitions>

			<Button HorizontalAlignment="Left">Agregar</Button>
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="0" Grid.ColumnSpan="2">
				<Button Margin="0" Click="btnFinish_Click">Terminar</Button>
				<Button Margin="0">Quitar</Button>
				<Button Margin="0">Subir</Button>
				<Button Margin="0">Bajar</Button>
				<Button Margin="0">Intercambiar</Button>
			</StackPanel>

			<TreeView Grid.Row="1">
				<TreeViewItem Header="Nivel I">
					<TreeViewItem Header="/a/">
						<TreeViewItem Header="an"></TreeViewItem>
						<TreeViewItem Header="ak"></TreeViewItem>
						<TreeViewItem Header="wd"></TreeViewItem>
					</TreeViewItem>
					<TreeViewItem Header="/d/"></TreeViewItem>
					<TreeViewItem Header="/s/"></TreeViewItem>
					<TreeViewItem Header="/f/"></TreeViewItem>
				</TreeViewItem>
				<TreeViewItem Header="Nivel II">
					<TreeViewItem Header="/a/"></TreeViewItem>
					<TreeViewItem Header="/d/"></TreeViewItem>
					<TreeViewItem Header="/s/"></TreeViewItem>
					<TreeViewItem Header="/f/"></TreeViewItem>
				</TreeViewItem>
			</TreeView>

			<ListBox Grid.Row="1" Grid.Column="1">
				<ListBoxItem>an</ListBoxItem>
				<ListBoxItem>un</ListBoxItem>
				<ListBoxItem>kun</ListBoxItem>
			</ListBox>

		</Grid>

	</DockPanel>
</taskara:Page>
